<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/frm_main_edit_picture_tools_ic_back"
        android:layout_width="@dimen/frm_main_edit_picture_tools_ic_base_size"
        android:layout_height="@dimen/frm_main_edit_picture_tools_ic_base_size"
        android:layout_marginStart="@dimen/ap_camera_view_item_padding_double"
        android:layout_marginTop="@dimen/ap_camera_view_item_padding_normal_half"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24" />


    <RelativeLayout
        android:id="@+id/frm_main_edit_picture_tools_container_image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/ap_camera_view_item_padding_double"
        android:layout_marginBottom="@dimen/ap_camera_view_item_padding_normal_half"
        app:layout_constraintBottom_toTopOf="@+id/frm_main_edit_picture_tools_container_ic_send"
        app:layout_constraintTop_toBottomOf="@+id/frm_main_edit_picture_tools_ic_back">

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/frm_main_edit_picture_tools_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            tools:ignore="SpeakableTextPresentCheck" />

    </RelativeLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/frm_main_edit_picture_tools_container_tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ap_camera_view_item_padding_normal_half"
        android:layout_marginEnd="@dimen/ap_camera_view_item_padding_double"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="@dimen/frm_main_edit_picture_tools_ic_base_size_container"
            android:layout_height="@dimen/frm_main_edit_picture_tools_ic_base_size_container"
            android:layout_marginTop="@dimen/ap_camera_view_item_padding"
            android:background="@drawable/background_ap_circle_view_transparent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/frm_main_edit_picture_tools_ic_edit_mode"
                android:layout_width="@dimen/frm_main_edit_picture_tools_ic_base_size"
                android:layout_height="@dimen/frm_main_edit_picture_tools_ic_base_size"
                android:layout_centerInParent="true"
                android:padding="2dp"
                app:srcCompat="@drawable/ic_baseline_edit_24" />

        </RelativeLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <RelativeLayout
        android:id="@+id/frm_main_edit_picture_tools_container_ic_send"
        android:layout_width="@dimen/frm_main_edit_picture_tools_ic_send_size_container"
        android:layout_height="@dimen/frm_main_edit_picture_tools_ic_send_size_container"
        android:layout_marginEnd="@dimen/ap_camera_view_item_padding_double"
        android:layout_marginBottom="@dimen/ap_camera_view_item_padding_normal_half"
        android:background="@drawable/background_ap_circle_view_white"
        android:padding="@dimen/frm_main_edit_picture_tools_ic_send_padding"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/frm_main_edit_picture_tools_ic_send"
            android:layout_width="@dimen/frm_main_edit_picture_tools_ic_send_size"
            android:layout_height="@dimen/frm_main_edit_picture_tools_ic_send_size"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ic_baseline_send_24" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>